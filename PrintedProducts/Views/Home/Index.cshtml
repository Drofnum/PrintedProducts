@model HomeViewModel

@{

    ViewData["Title"] = "Home Page";
}

<div class="container body-content">
    <div class="row frontPageSplash">
        <div class="col-md-6 frontPageLearn">
            <div class="frontPageHeading">Printed Products</div>
            <p class="frontPageSubHeading">3D printed wargaming products!</p>
            <div>
                <form asp-controller="Search" asp-action="Search" method="post">
                    <input type="text" class="homeSearch" placeholder="Search..." />
                </form>
            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>
    <div class="row frontPageTitle">
        <h3 id="newItems">New Items</h3>
        <div class="row frontPageContent">
            @foreach (var product in Model.ProductList)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="@product.ImageThumbnailUrl" alt="" />
                        <div class="caption">
                            <h3 class="pull-right">@product.Price.ToString("c")</h3>
                            <h3>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Title</a>
                            </h3>
                            <p>@product.ShortDescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
